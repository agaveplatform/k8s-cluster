apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: {{ kubernetes_service_account_namespace }}-service:psp:{{ project_name }}
  namespace: {{ kubernetes_service_account_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: psp:privileged
subjects:
- kind: ServiceAccount
  name: default
  namespace: {{ kubernetes_service_account_namespace }}
