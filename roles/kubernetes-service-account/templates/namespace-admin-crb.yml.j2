apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: {{ kubernetes_service_account_namespace }}:{{ kubernetes_service_account_namespace }}:admin
  namespace: {{ kubernetes_service_account_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: admin
subjects:
- kind: ServiceAccount
  name: {{ kubernetes_service_account_namespace }}
  namespace: support
- kind: User
  name: {{ kubernetes_service_account_namespace }}
